- if current_user.admin?
  .col-md-6.col-md-offset-3.margin-20
    = form_tag match_update_score_path(@game), :method => :post, :class => 'form-horizontal match_update_score_form'
    .form-group
      %label.col.col-md-3.control-label Tỉ số:
      .col.col-md-3
        = select_tag "score_id", options_for_select(@scores, @game.score_id), :class => 'form-control'
    .form-group
      %label.col.col-md-3.control-label Kết quả:
      .col.col-md-9
        = radio_button_tag "result", @game.team1_id, @game.winner == @game.team1_id
        = "#{@game.team1.title} thắng"
    .form-group
      %label.col.col-md-3.control-label
      .col.col-md-9
        = radio_button_tag "result", @game.team2_id, @game.winner == @game.team2_id
        = "#{@game.team2.title} thắng"
    .form-group
      %label.col.col-md-3.control-label
      .col.col-md-9
        = radio_button_tag "result", nil, @game.winner == nil
        Hòa
    %div{style: "margin-left: 110px;"}
      %button.btn.btn-primary{type: "submit"} Gửi
      = link_to "Về trang chủ", match_game_path(@game), :class => "btn btn-default"
- else
  = "Bạn không có quyền truy cập vào trang này."