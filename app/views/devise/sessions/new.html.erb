<div class="col-md-6 col-md-offset-3" style="margin-bottom: 20px;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div><%= f.label :login %><br />
    <%= f.text_field :login, autofocus: true, :class => "form-control" %></div>
    <br />
    <div><%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :class => "form-control" %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => "pull-right btn btn-primary" %></div>
  <% end %>
</div>